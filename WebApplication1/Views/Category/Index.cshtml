@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<table class="table table-borered table-srtiped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Date Time
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() != 0)
        {
            @foreach (Category obj in Model)
            {
                <tr>
                    <td width="25%">
                        @obj.Id
                    </td>
                    <td width="25%">
                        @obj.Name
                    </td>
                    <td width="25%">
                        @obj.DisplayOrder
                    </td>
                    <td width="25%">
                        @obj.CreatedDateTime
                    </td>
                </tr>
            }
        }
        else
        {
            <p class="h1">Categories list is empty</p>
        }
    </tbody>
</table>